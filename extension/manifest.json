{
  "name": "ApiTestExtension",
  "description": "It logs the API-calls from the current site",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background-script.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"]
    }
  ],
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}
